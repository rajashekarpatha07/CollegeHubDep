# Database Configuration
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# Server Configuration
PORT=10000
CORS_ORIGIN=*

# JWT Configuration
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
ACCESS_TOKEN_LIFE=1h
REFRESH_TOKEN_LIFE=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration
# For email functionality, you need an active Brevo (formerly SendinBlue) account
# Visit https://www.brevo.com/ to create an account and generate an API key
# Make sure your API key is enabled and has the proper permissions
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Brevo/SendinBlue API Key (must be active and enabled)
SENDINBLUE_API_KEY=your_sendinblue_api_key 